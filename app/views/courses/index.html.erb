<p id="notice"><%= notice %></p>

<h1>Courses</h1>
<form accept-charset="UTF-8" action="/courses" method="get">
  <input name="search_bar" type="text" />
  <input name="commit" type="submit" value="Search" />
</form>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Code</th>
      <th>Teacher</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.code %></td>
        <td><%= course.teacher %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
          <form accept-charset="UTF-8" action="/show_people" method="get">
            <%= hidden_field :course_id, "#{course.id}" %>
            <input name="commit" type="submit" value="Add studdents" />
          </form>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Course', new_course_path %>
